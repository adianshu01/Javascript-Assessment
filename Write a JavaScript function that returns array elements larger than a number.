function elementsGreaterThan(arr, threshold) {
    // Filter the array to get elements larger than the threshold
    let result = arr.filter(function(element) {
        return element > threshold;
    });

    return result;
}

// Example usage:
const numbers = [5, 12, 3, 8, 20, 1, 15];
const threshold = 10;
const largerThanThreshold = elementsGreaterThan(numbers, threshold);

console.log(`Elements larger than ${threshold}:`, largerThanThreshold);
