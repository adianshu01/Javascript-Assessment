function findLongestWord(str) {
    // Split the string into an array of words
    const words = str.split(' ');

    // Initialize variables to keep track of the longest word and its length
    let longestWord = '';
    let maxLength = 0;

    // Iterate through the array of words
    for (let i = 0; i < words.length; i++) {
        // Remove any non-alphanumeric characters to get the actual word length
        const wordLength = words[i].replace(/[^a-zA-Z0-9]/g, '').length;

        // If the current word is longer than the current longest word, update variables
        if (wordLength > maxLength) {
            maxLength = wordLength;
            longestWord = words[i];
        }
    }

    return longestWord;
}

// Example usage:
const inputString = 'Web Development Tutorial';
const longestWord = findLongestWord(inputString);

console.log("Input string:", inputString);
console.log("Longest word:", longestWord);
